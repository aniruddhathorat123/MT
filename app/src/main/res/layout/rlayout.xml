<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        card_view:cardCornerRadius="0dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_number"
                android:text="Rishab"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_name"
                android:text="Rishab"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tx_number"
                android:layout_toEndOf="@+id/tx_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STA"
                android:id="@+id/sta"
                android:gravity="center"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/tx_number"
                android:layout_marginTop="4dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eta"
                android:text="ETA"
                android:gravity="center"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/tx_number"
                android:layout_toRightOf="@+id/tx_number"
                android:layout_toEndOf="@+id/tx_number"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_arrival"
                android:text="Rishab"
                android:gravity="center"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/sta"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_dep"
                android:text="Rishab"
                android:gravity="center"
                android:textSize="14dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:layout_below="@+id/eta"
                android:layout_toRightOf="@+id/tx_number"
                android:layout_toEndOf="@+id/tx_number"
                android:layout_marginTop="4dp"
                android:paddingBottom="10dp"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>