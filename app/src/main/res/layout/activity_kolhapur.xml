                    </ImageView>

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starempty"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="130dp"
                        android:id="@+id/panhalafort_star5"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rankalalake_cardview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:onClick="rankalalake_des"
                card_view:cardCornerRadius="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"
                        android:id="@+id/rankalalake_imageView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp"
                        android:paddingBottom="13dp"/>

                    <ImageView
                        android:id="@+id/rankalalake_img_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/rankalalake"
                        android:layout_above="@id/rankalalake_imageView"
                        android:paddingTop="40dp"
                        android:scaleType="fitXY"
                        />

                    <TextView
                        android:id="@+id/rankalalake_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/rankala_lake"
                        android:textColor="#3f48cc"
                        android:textSize="18dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
