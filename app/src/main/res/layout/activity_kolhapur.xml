<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/jyotiba_cardview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="jyotiba_des"
                android:layout_marginTop="0dp"
                card_view:cardCornerRadius="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/joytiba_img_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/jyotibatemple"
                        android:layout_above="@+id/jyotiba_imageView"
                        android:paddingTop="40dp"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/jyotiba_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/jyotiba_temple"
                        android:textColor="#3f48cc"
                        android:textSize="18dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="8dp"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"
                        android:id="@+id/jyotiba_imageView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp"
                        android:paddingBottom="13dp"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.0"
                        android:paddingTop="3dp"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:id="@+id/jyotiba_num"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="14dp"
                        >
                    </TextView>
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starfull"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="42dp"
                        android:id="@+id/jyotiba_star1">
                    </ImageView>
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starfull"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="64dp"
                        android:id="@+id/jyotiba_star2">
                    </ImageView>
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starfull"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="86dp"
                        android:id="@+id/jyotiba_star3">
                    </ImageView>
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starfull"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="108dp"
                        android:id="@+id/jyotiba_star4">
                    </ImageView>

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_starempty"
                        android:layout_alignParentBottom="true"
                        android:paddingBottom="12dp"
                        android:layout_marginLeft="130dp"
                        android:id="@+id/jyotiba_star5"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
