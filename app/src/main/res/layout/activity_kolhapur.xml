                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/hotel_cardview"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/ic_hotel"
                        android:paddingLeft="3dp"
                        android:scaleType="fitXY">

                    </ImageView>
                    <TextView
                        android:id="@+id/hotel_kolhapur_image"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Want to stay in Kolhapur ? Quick look Hotels in Kolapur"
                        android:textSize="14sp"
                        android:paddingLeft="49dp"
                        android:paddingTop="7dp"
                        />
                    <ImageView
                        android:id="@+id/hotel_kolhapur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/hotel"
                        android:layout_above="@+id/hotel_line"
                        android:paddingTop="50dp"
                        android:scaleType="fitXY"
                        >
                    </ImageView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"
                        android:id="@+id/hotel_line"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY">
                    </ImageView>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:text="See Hotels in Kolhapur"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/button_text_color"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="9dp"
                        android:id="@+id/button_hotel"
                        android:drawableRight="@drawable/ic_next"
                        android:layout_gravity="start"
                        android:onClick="kolhapurhotels"
                        android:background="#FFFFFF"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/resturants_cardview"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="0dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_dinning"
                        android:paddingLeft="3dp"
                        android:scaleType="fitXY"
                        android:paddingTop="3dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/resturants_kolhapur_image"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Very Hungry!!!! See Resturants and Hotels in Kolhapur"
                        android:textSize="14sp"
                        android:paddingLeft="49dp"
                        android:paddingTop="7dp"
                        />
                    <ImageView
                        android:id="@+id/resturants_kolhapur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/resturant"
                        android:layout_above="@+id/resturants_line"
                        android:paddingTop="50dp"
                        android:scaleType="fitXY"
                        >
                    </ImageView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"
                        android:id="@+id/resturants_line"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp"
                        android:paddingBottom="10dp"
                        android:scaleType="fitXY">
                    </ImageView>
                    <Button
                        android:onClick="kolhapurresturants"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        style="@android:style/Widget.Holo.Button.Borderless"
                        android:text="See Resturants in Kolhapur"
                        android:textColor="@color/button_text_color"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingBottom="9dp"
                        android:id="@+id/button_resturants"
                        android:drawableRight="@drawable/ic_next"
                        android:layout_gravity="start"
                        android:background="#FFFFFF"
                        />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Space
                android:layout_width="match_parent"
                android:layout_height="4dp" />
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="0dp"
                android:onClick="kolhapurrailway"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/rail"
                        android:scaleType="fitXY">
                    </ImageView>
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:text="Want to Leave Kolhapur !! Chech next 2 hrs train"
                        android:textSize="14sp"
                        android:paddingTop="7dp"
                        />
                </LinearLayout>



            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
