                android:id="@+id/panhalafort_cardview"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="panhalafort_des"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="0dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/line"
                        android:id="@+id/panhalafort_imageView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="24dp"
                        android:paddingBottom="13dp"
                        />

                    <ImageView
                        android:id="@+id/panhalafort_img_a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/panhalafort"
                        android:layout_above="@id/panhalafort_imageView"
                        android:scaleType="fitXY"
                        android:paddingTop="40dp"/>

                    <TextView
                        android:id="@+id/panhalafort_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/panhala_fort"
                        android:textColor="#3f48cc"
                        android:textSize="18dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="8dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
